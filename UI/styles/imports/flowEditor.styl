.flowEditor
  position absolute
  top 0
  bottom 0
  left 0
  right 0
.flowTitle
  font-size 12px
  color #4A4A4A
  text-align center
  vertical-align middle
  height 40px
  width 100%
  display table
  > div
    display inline
    text-align center
    display table-cell
    vertical-align middle
    width 100%
    max-width 180px
    p
      display block
      max-height 42px
      text-overflow ellipsis
      cursor default
      overflow hidden
      max-width 180px
      &.alignLeft
        text-align left
        padding-left 5px
  &.active
    >div
      p
        color #4a90e2
  &.focused
    >div
      p
        color #fff
        font-weight 300
        cursor text